extends: default

# Ignore vendored and generated YAML to avoid noisy warnings from site-packages
# and tox/.venv copies. Keep checks for repository-owned config files.
ignore: |
  .venv/**
  .tox/**
  site/**
  docs/site/**
  htmlcov/**
  backups-scratch/**
  .secrets.baseline
  plugins/**

rules:
  # Allow longer lines in workflow files (tags and echo lines are long)
  line-length:
    max: 200
    level: warning

  # Do not require a global document-start for all YAML files. We prefer to
  # allow repo files that are single-document (configs, templates) and only
  # add '---' where it's actually needed for multi-document files.
  document-start:
    present: false

  # The repository's workflow files use GitHub Actions idioms that sometimes
  # conflict with strict yamllint rules (e.g. step list indentation and
  # bracket spacing). Relax a few rules to avoid noise while keeping useful
  # checks enabled.
  indentation: disable
  brackets: disable
  truthy: disable
