{
    // Recommended workspace settings for development
    // Use the repo-local virtualenv if present so Pylance and the Python
    // extension resolve installed packages like 'yaml'.
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // Help the language server find imports in the repository root.
    "python.analysis.extraPaths": ["${workspaceFolder}"],
    // Keep a modest level of type checking for developer feedback.
    "python.analysis.typeCheckingMode": "basic"
}
